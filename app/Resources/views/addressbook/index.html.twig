{% extends 'base.html.twig' %}

{% block body %}

<div class="table-responsive-sm">
<h2 class="page-header">Addressbook contacts </h2>
<div>
<table class="table table-striped table-hover table-responsive">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Last Name</th>
      <th scope="col">First Name</th>
      <th scope="col">Street Name</th>
      <th scope="col">Street No</th>
      <th scope="col">Zip</th>
      <th scope="col">City</th>
      <th scope="col">Country</th>
      <th scope="col">PhoneNo</th>
      <th scope="col">DOB</th>
      <th scope="col">Email</th>
      <th scope="col">Picture</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {% for contact in contacts %}
      <tr>
      <th scope="row">{{contact.id}}</th>
      <td>{{contact.firstName}}</td>
      <td>{{contact.lastName}}</td>
      <td>{{contact.streetName}}</td>
      <td>{{contact.streetNo}}</td>
      <td>{{contact.zip}}</td>
      <td>{{contact.city}}</td>
      <td>{{contact.country}}</td>
      <td>{{contact.phone}}</td>
      <td>{{contact.dob|date("F j, Y")}}</td>
       <td>{{contact.email}}</td>
      <td>{{contact.picture}}</td>
      <td>
        <a href="/contacts/view/{{contact.id}}" class="btn btn-sm btn-success" >View</a>
        <a href="/contacts/edit/{{contact.id}}" class="btn btn-sm btn-primary" >Edit</a>
        <a href="/contacts/delete/{{contact.id}}" class="btn btn-sm btn-danger" >Delete</a>
      </td>
    </tr>    
    {% endfor %}
  </tbody>
</table>
</div>
</div>
{% endblock %}
