{% extends 'base.html.twig' %}

{% block body %}

<div class="table-responsive-sm">
<h2 class="page-header">Addressbook contacts </h2>

<table class="table table-condensed table-responsive table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Last Name</th>
      <th scope="col">First Name</th>
      <th scope="col">Street Name</th>
      <th scope="col">Street No</th>
      <th scope="col">Zip</th>
      <th scope="col">City</th>
      <th scope="col">Country</th>
      <th scope="col">PhoneNo</th>
      <th scope="col">DOB</th>
      <th scope="col">Email</th>
      <th scope="col">Picture</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {% for contact in contacts %}
      <tr>
      <th scope="row">{{contact.id}}</th>
      <td>{{contact.firstName}}</td>
      <td>{{contact.lastName}}</td>
      <td>{{contact.streetName}}</td>
      <td>{{contact.streetNo}}</td>
      <td>{{contact.zip}}</td>
      <td>{{contact.city}}</td>
      <td>{{contact.country}}</td>
      <td>{{contact.phone}}</td>
      <td>{{contact.dob|date("F j, Y")}}</td>
      <td>{{contact.email}}</td>
      <td>
  			<img src="{{ asset('uploads/' ~ contact.picture)}}" alt="{{contact.firstName}}" class="img-thumb">	
	  </td>
      <td>
        <a href="{{ path('addrbook_details', {'id': contact.id}) }}" class="btn btn-sm btn-success" ><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
        <a href="{{ path('addrbook_edit', {'id': contact.id}) }}" class="btn btn-sm btn-primary" ><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
        <a href="{{ path('addrbook_delete', {'id': contact.id}) }}" class="btn btn-sm btn-danger" ><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
      </td>
    </tr>    
    {% endfor %}
  </tbody>
</table>

</div>
{% endblock %}
